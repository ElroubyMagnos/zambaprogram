<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DistributeurATM.View.dépôtpage"
             x:DataType="local:dépôtViewModel"
             xmlns:local="clr-namespace:DistributeurATM.ViewModel"
             Title="">
    <VerticalStackLayout Margin="25" HorizontalOptions="Center" Spacing="100">
        <HorizontalStackLayout>
            <Label FontSize="25" FontAttributes="Bold" Text="{Binding CurrentCustomerView.Username, StringFormat='{0} have'}"/>
            <Label FontSize="25" Text="{Binding CurrentMoney, StringFormat=' {0} Euro'}"/>
        </HorizontalStackLayout>

        <VerticalStackLayout Spacing="5" WidthRequest="200">
            <Entry Text="{Binding CurrentEntry}"/>

            <FlexLayout JustifyContent="SpaceBetween">
                <Button Command="{Binding DepositCommand}" Text="Deposit"/>
                <Button Command="{Binding WithdrawCommand}" Text="Withdraw"/>
            </FlexLayout>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>