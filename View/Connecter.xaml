<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DistributeurATM.View.Connecter"
             xmlns:local="clr-namespace:DistributeurATM.ViewModel"
             x:DataType="local:ConnecterViewModel"
             Title="Connecter">
    
    <VerticalStackLayout VerticalOptions="Center" Spacing="5" Margin="25">
        <Entry Placeholder="Username" Text="{Binding Username}"/>
        <Entry Placeholder="Password" Text="{Binding Password}"/>
        <Button Command="{Binding loginCommand}" Text="Connecter"/>
    </VerticalStackLayout>
</ContentPage>